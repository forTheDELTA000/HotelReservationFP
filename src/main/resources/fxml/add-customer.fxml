<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/25.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.hotelreservationfp.ui.controller.AddCustomerController"
            fitToWidth="true" styleClass="root">

    <VBox spacing="20" style="-fx-padding: 20;" alignment="TOP_CENTER">

        <VBox spacing="5" maxWidth="1000">
            <Label fx:id="pageTitle" text="Add Customer" styleClass="page-title" />
            <HBox spacing="5">
                <Label text="Dashboard &gt; All Customers &gt;" styleClass="breadcrumb-text" />
                <Label fx:id="breadcrumbActive" text="Add Customer" styleClass="breadcrumb-active"/>
            </HBox>
        </VBox>

        <GridPane hgap="20" vgap="15" styleClass="form-container"
                  GridPane.hgrow="ALWAYS" maxWidth="1000">

            <columnConstraints>
                <ColumnConstraints percentWidth="33.3" />
                <ColumnConstraints percentWidth="33.3" />
                <ColumnConstraints percentWidth="33.4" />
            </columnConstraints>

            <TextField fx:id="guestIdField" visible="false" managed="false" GridPane.rowIndex="0" GridPane.columnIndex="0" />

            <Label text="First Name" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="firstNameField" promptText="First Name" GridPane.rowIndex="2" GridPane.columnIndex="0" />

            <Label text="Last Name" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            <TextField fx:id="lastNameField" promptText="Last Name" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Email ID" GridPane.rowIndex="1" GridPane.columnIndex="2" />
            <TextField fx:id="emailField" promptText="Email" GridPane.rowIndex="2" GridPane.columnIndex="2" />

            <Label text="Phone Number" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="phoneField" promptText="Phone Number" GridPane.rowIndex="4" GridPane.columnIndex="0" />

        </GridPane>

        <HBox spacing="10" alignment="BOTTOM_RIGHT" maxWidth="1000">
            <Button text="Cancel" onAction="#handleCancel" styleClass="btn, btn-secondary" />
            <Button text="Save Customer" onAction="#handleSaveCustomer" styleClass="btn, btn-primary" />
        </HBox>

    </VBox>
</ScrollPane>