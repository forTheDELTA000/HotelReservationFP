<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" styleClass="root"
      xmlns="http://javafx.com/javafx/25.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.hotelreservationfp.ui.controller.AllBookingsController">

    <Label text="All Bookings" styleClass="page-title" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search bookings..." HBox.hgrow="ALWAYS" />
        <Button text="+ Add New Booking" styleClass="btn, btn-success" onAction="#showAddBookingForm"/>
        <Button text="Refresh" styleClass="btn, btn-primary" onAction="#loadBookings"/>
    </HBox>

    <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
        <TableView fx:id="bookingsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                <TableColumn fx:id="guestNameColumn" text="Guest Name" prefWidth="150" />
                <TableColumn fx:id="roomTypeColumn" text="Room Type" prefWidth="120" />
                <TableColumn fx:id="checkInColumn" text="Check-in Date" prefWidth="120" />
                <TableColumn fx:id="checkOutColumn" text="Check-out Date" prefWidth="120" />
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="80" />
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150" />
            </columns>
        </TableView>
    </VBox>

</VBox>