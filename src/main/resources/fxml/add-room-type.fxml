<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/25.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.hotelreservationfp.ui.controller.AddRoomTypeController"
            fitToWidth="true" styleClass="root">

    <VBox spacing="20" style="-fx-padding: 20;" alignment="TOP_CENTER">

        <VBox spacing="5" maxWidth="1000">
            <Label fx:id="pageTitle" text="Add Room Type" styleClass="page-title" />
            <HBox spacing="5">
                <Label text="Dashboard &gt; All Room Types &gt;" styleClass="breadcrumb-text" />
                <Label fx:id="breadcrumbActive" text="Add Room Type" styleClass="breadcrumb-active"/>
            </HBox>
        </VBox>

        <GridPane hgap="20" vgap="15" styleClass="form-container"
                  GridPane.hgrow="ALWAYS" maxWidth="1000">

            <columnConstraints>
                <ColumnConstraints percentWidth="33.3" />
                <ColumnConstraints percentWidth="33.3" />
                <ColumnConstraints percentWidth="33.4" />
            </columnConstraints>

            <TextField fx:id="roomTypeIdField" visible="false" managed="false" GridPane.rowIndex="0" GridPane.columnIndex="0" />

            <Label text="Room Type Name" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="nameField" promptText="e.g., Deluxe Room" GridPane.rowIndex="2" GridPane.columnIndex="0" />

            <Label text="Price Per Night" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            <TextField fx:id="pricePerNightField" promptText="e.g., 150.00" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Max Guests" GridPane.rowIndex="1" GridPane.columnIndex="2" />
            <ComboBox fx:id="maxGuestsCombo" promptText="Select Max Guests" GridPane.rowIndex="2" GridPane.columnIndex="2" maxWidth="Infinity"/>

            <Label text="Image URL" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="imageUrlField" promptText="https://i.imgur.com/your-image.jpg" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" />

            <Label text="Description" GridPane.rowIndex="5" GridPane.columnIndex="0" />

            <TextArea fx:id="descriptionArea" prefRowCount="5" wrapText="true" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="3" />

        </GridPane>

        <HBox spacing="10" alignment="BOTTOM_RIGHT" maxWidth="1000">
            <Button text="Cancel" onAction="#handleCancel" styleClass="btn, btn-secondary" />
            <Button text="Save" onAction="#handleSaveRoomType" styleClass="btn, btn-primary" />
        </HBox>

    </VBox>
</ScrollPane>