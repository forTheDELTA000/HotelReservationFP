<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/25.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.hotelreservationfp.ui.controller.LockScreenController"
            style="-fx-background-color: #f4f7fa;">

    <center>
        <HBox style="-fx-border-color: #ddd; -fx-border-radius: 5px; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);"
              maxWidth="900" maxHeight="600" alignment="CENTER">

            <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-background-color: #007bff; -fx-padding: 30;"
                  minWidth="300">
                <ImageView fitHeight="100" fitWidth="200" preserveRatio="true">
                    <image>
                        <Image url="@../static/admin/assets/img/logo.png" />
                    </image>
                </ImageView>
            </VBox>

            <VBox spacing="20" HBox.hgrow="ALWAYS" style="-fx-padding: 40;" maxWidth="450" alignment="CENTER">

                <VBox alignment="CENTER" spacing="10">
                    <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                        <clip>
                            <Circle radius="35" centerX="35" centerY="35"/>
                        </clip>
                        <image>
                            <Image url="@../static/admin/assets/img/profiles/avatar-02.jpg" />
                        </image>
                    </ImageView>
                    <Label fx:id="userNameLabel" text="John Doe" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                </VBox>

                <Label fx:id="messageLabel" text="" style="-fx-text-fill: red;" visible="false"/>

                <VBox spacing="10">
                    <PasswordField fx:id="passwordField" promptText="Password" />
                </VBox>

                <Button text="Enter" onAction="#handleUnlock"
                        maxWidth="Infinity" style="-fx-background-color: #007bff; -fx-text-fill: white;">
                    <VBox.margin><Insets top="10.0" /></VBox.margin>
                </Button>

                <HBox alignment="CENTER" spacing="5">
                    <Label text="Sign in as a different user?" />
                    <Hyperlink text="Login" onAction="#handleLoginLink" />
                </HBox>

            </VBox>
        </HBox>
    </center>
</BorderPane>