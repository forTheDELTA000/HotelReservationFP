<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<ScrollPane xmlns="http://javafx.com/javafx/25.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.hotelreservationfp.ui.controller.DashboardMainController"
            fitToWidth="true" styleClass="root">

    <stylesheets>
        <URL value="@../../css/style.css" />
    </stylesheets>

    <VBox spacing="20" style="-fx-padding: 20;">

        <VBox spacing="5">
            <Label text="Good Morning!" styleClass="page-title" />
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Dashboard" styleClass="breadcrumb-active" />
                <Label text="&gt;" styleClass="breadcrumb-text" />
                <Label text="Active" styleClass="breadcrumb-text" />
            </HBox>
        </VBox>

        <HBox spacing="20">

            <VBox HBox.hgrow="ALWAYS" styleClass="card">
                <HBox alignment="CENTER_LEFT">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label fx:id="totalBookingsLabel" text="0" styleClass="card-value" />
                        <Label text="Total Bookings" styleClass="card-subtitle" />
                    </VBox>
                    <Label text="ðŸ‘¤" styleClass="card-icon" />
                </HBox>
            </VBox>

            <VBox HBox.hgrow="ALWAYS" styleClass="card">
                <HBox alignment="CENTER_LEFT">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label fx:id="availableRoomsLabel" text="0" styleClass="card-value" />
                        <Label text="Available Rooms" styleClass="card-subtitle" />
                    </VBox>
                    <Label text="ðŸ " styleClass="card-icon" />
                </HBox>
            </VBox>

            <VBox HBox.hgrow="ALWAYS" styleClass="card">
                <HBox alignment="CENTER_LEFT">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label fx:id="totalGuestsLabel" text="0" styleClass="card-value" />
                        <Label text="Total Customers" styleClass="card-subtitle" />
                    </VBox>
                    <Label text="ðŸ“„" styleClass="card-icon" />
                </HBox>
            </VBox>

            <VBox HBox.hgrow="ALWAYS" styleClass="card">
                <HBox alignment="CENTER_LEFT">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label fx:id="totalRevenueLabel" text="\$0.00" styleClass="card-value" />
                        <Label text="Total Revenue" styleClass="card-subtitle" />
                    </VBox>
                    <Label text="\$" styleClass="card-icon" />
                </HBox>
            </VBox>
        </HBox>

        <HBox spacing="20" VBox.vgrow="ALWAYS">

            <VBox HBox.hgrow="ALWAYS" styleClass="card">
                <Label text="VISITORS (Static)" styleClass="section-title"/>
                <VBox fx:id="lineChartContainer" prefHeight="300" styleClass="chart-placeholder-box" VBox.vgrow="ALWAYS">
                    <Label text="[Line Chart Placeholder]" styleClass="placeholder-text" alignment="CENTER" maxWidth="Infinity" maxHeight="Infinity"/>
                </VBox>
            </VBox>

            <VBox HBox.hgrow="ALWAYS" styleClass="card">
                <Label text="ROOMS BOOKED (Static)" styleClass="section-title"/>
                <VBox fx:id="donutChartContainer" prefHeight="300" styleClass="chart-placeholder-box" VBox.vgrow="ALWAYS">
                    <Label text="[Donut Chart Placeholder]" styleClass="placeholder-text" alignment="CENTER" maxWidth="Infinity" maxHeight="Infinity"/>
                </VBox>
            </VBox>
        </HBox>
    </VBox>
</ScrollPane>