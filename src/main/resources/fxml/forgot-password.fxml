<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/25.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.hotelreservationfp.ui.controller.ForgotPasswordController"
            style="-fx-background-color: #f4f7fa;">

    <center>
        <HBox style="-fx-border-color: #ddd; -fx-border-radius: 5px; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);"
              maxWidth="900" maxHeight="600" alignment="CENTER">

            <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-background-color: #007bff; -fx-padding: 30;"
                  minWidth="300">
                <ImageView fitHeight="100" fitWidth="200" preserveRatio="true">
                    <image>
                        <Image url="@../static/admin/assets/img/logo.png" />
                    </image>
                </ImageView>
            </VBox>

            <VBox spacing="15" HBox.hgrow="ALWAYS" style="-fx-padding: 40;" maxWidth="450">
                <Label text="Forgot Password?" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <Label text="Enter your email to get a password reset link" style="-fx-text-fill: #6c757d;" />

                <Label fx:id="messageLabel" text="" style="-fx-text-fill: red;" visible="false"/>

                <VBox spacing="10">
                    <TextField fx:id="emailField" promptText="Email" />
                </VBox>

                <Button text="Reset Password" onAction="#handleResetPassword"
                        maxWidth="Infinity"
                        style="-fx-background-color: #007bff; -fx-text-fill: white;">
                    <VBox.margin><Insets top="10.0" /></VBox.margin>
                </Button>

                <HBox alignment="CENTER" spacing="5">
                    <Label text="Remember your password?" />
                    <Hyperlink text="Login" onAction="#handleLoginLink" />
                </HBox>

            </VBox>
        </HBox>
    </center>
</BorderPane>