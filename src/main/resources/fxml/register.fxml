<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/25.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.hotelreservationfp.ui.controller.RegisterController"
            styleClass="root">

    <center>
        <HBox styleClass="auth-box" maxWidth="900" maxHeight="600" alignment="CENTER">

            <VBox alignment="CENTER" HBox.hgrow="ALWAYS" styleClass="auth-sidebar" minWidth="300">
                <ImageView fitHeight="100" fitWidth="200" preserveRatio="true">
                    <image>
                        <Image url="@../static/admin/assets/img/logo.png" />
                    </image>
                </ImageView>
            </VBox>

            <VBox spacing="15" HBox.hgrow="ALWAYS" styleClass="auth-form-area" maxWidth="450">
                <Label text="Register" styleClass="page-title" />

                <Label fx:id="errorMessageLabel" text="Registration failed: Email already exists."
                       styleClass="alert-error" visible="false"/>

                <VBox spacing="10">
                    <TextField fx:id="firstNameField" promptText="First Name" />
                    <TextField fx:id="lastNameField" promptText="Last Name" />
                    <TextField fx:id="emailField" promptText="Email" />
                    <PasswordField fx:id="passwordField" promptText="Password" />
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
                </VBox>

                <Button text="Register" onAction="#handleRegister"
                        maxWidth="Infinity" styleClass="btn, btn-primary" />

                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already have an account?" />
                    <Hyperlink text="Login" onAction="#handleLoginLink" />
                </HBox>

            </VBox>
        </HBox>
    </center>
</BorderPane>