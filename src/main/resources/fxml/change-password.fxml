<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #f4f7fa;"
      xmlns="http://javafx.com/javafx/25.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.hotelreservationfp.ui.controller.ChangePasswordController">

    <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <VBox spacing="20" style="-fx-padding: 30; -fx-background-color: white; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);"
              maxWidth="450" alignment="CENTER">

            <Label text="Change Password" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <Label fx:id="messageLabel" text="" style="-fx-text-fill: red;" visible="false"/>

            <GridPane vgap="15" hgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="100" />
                </columnConstraints>

                <Label text="OLD PASSWORD" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <PasswordField fx:id="oldPasswordField" promptText="Enter old password" GridPane.rowIndex="1" GridPane.columnIndex="0" maxWidth="Infinity" />

                <Label text="NEW PASSWORD" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <PasswordField fx:id="newPasswordField" promptText="Enter new password" GridPane.rowIndex="3" GridPane.columnIndex="0" maxWidth="Infinity" />

                <Label text="CONFIRM PASSWORD" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" GridPane.rowIndex="5" GridPane.columnIndex="0" maxWidth="Infinity" />

                <Button text="Update Password" onAction="#handleUpdatePassword"
                        style="-fx-background-color: #007bff; -fx-text-fill: white;"
                        maxWidth="Infinity" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.vgrow="NEVER">
                    <GridPane.margin>
                        <Insets top="15.0" />
                    </GridPane.margin>
                </Button>
            </GridPane>
        </VBox>
    </HBox>
</VBox>