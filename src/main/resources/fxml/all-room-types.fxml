<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f7fa;"
      xmlns="http://javafx.com/javafx/25.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.hotelreservationfp.ui.controller.AllRoomTypesController">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="All Room Types" style="-fx-font-size: 24px; -fx-font-weight: bold;" HBox.hgrow="ALWAYS"/>
        <Button text="Add Room Type" style="-fx-background-color: #007bff; -fx-text-fill: white;" onAction="#showAddRoomTypeForm"/>
    </HBox>

    <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
        <TableView fx:id="roomTypesTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" text="Room Type Name" prefWidth="180" />
                <TableColumn fx:id="priceColumn" text="Price Per Night" prefWidth="150" />
                <TableColumn fx:id="guestsColumn" text="Max Guests" prefWidth="100" />
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="300" />
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="120" />
            </columns>
        </TableView>
    </VBox>
</VBox>