<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/25.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.hotelreservationfp.ui.controller.RegisterController"
            style="-fx-background-color: #f4f7fa;">

    <center>
        <HBox style="-fx-border-color: #ddd; -fx-border-radius: 5px; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);"
              maxWidth="900" maxHeight="600" alignment="CENTER">

            <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-background-color: #007bff; -fx-padding: 30;"
                  minWidth="300">
                <ImageView fitHeight="100" fitWidth="200" preserveRatio="true">
                    <image>
                        <Image url="@../static/admin/assets/img/logo.png" />
                    </image>
                </ImageView>
            </VBox>

            <VBox spacing="15" HBox.hgrow="ALWAYS" style="-fx-padding: 40;" maxWidth="450">
                <Label text="Register" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

                <Label fx:id="errorMessageLabel" text="Registration failed: Email already exists."
                       style="-fx-text-fill: red; -fx-font-weight: bold;" visible="false"/>

                <VBox spacing="10">
                    <TextField fx:id="firstNameField" promptText="First Name" />
                    <TextField fx:id="lastNameField" promptText="Last Name" />
                    <TextField fx:id="emailField" promptText="Email" />
                    <PasswordField fx:id="passwordField" promptText="Password" />
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
                </VBox>

                <Button text="Register" onAction="#handleRegister"
                        maxWidth="Infinity" style="-fx-background-color: #007bff; -fx-text-fill: white;" />

                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already have an account?" />
                    <Hyperlink text="Login" onAction="#handleLoginLink" />
                </HBox>

            </VBox>
        </HBox>
    </center>
</BorderPane>