<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f7fa;"
      xmlns="http://javafx.com/javafx/25.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.hotelreservationfp.ui.controller.AllCustomersController">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="All Customers" style="-fx-font-size: 24px; -fx-font-weight: bold;" HBox.hgrow="ALWAYS"/>
        <Button text="Add Customer" style="-fx-background-color: #007bff; -fx-text-fill: white;" onAction="#showAddCustomerForm"/>
    </HBox>

    <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
        <TableView fx:id="customersTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="Guest ID" prefWidth="100" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="200" />
                <TableColumn fx:id="emailColumn" text="Email ID" prefWidth="220" />
                <TableColumn fx:id="phoneColumn" text="Phone Number" prefWidth="150" />
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="120" />
            </columns>
        </TableView>
    </VBox>
</VBox>