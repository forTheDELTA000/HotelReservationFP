<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" styleClass="root"
      xmlns="http://javafx.com/javafx/25.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.hotelreservationfp.ui.controller.PaymentsController">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Payments History" styleClass="page-title" HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" styleClass="btn, btn-success" onAction="#loadPayments"/>
    </HBox>

    <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
        <TableView fx:id="paymentsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="invoiceIdColumn" text="Invoice ID" prefWidth="120" />
                <TableColumn fx:id="customerNameColumn" text="Customer Name" prefWidth="200" />
                <TableColumn fx:id="paymentTypeColumn" text="Payment Type" prefWidth="150" />
                <TableColumn fx:id="paidDateColumn" text="Paid Date" prefWidth="150" />
                <TableColumn fx:id="paidAmountColumn" text="Paid Amount" prefWidth="150" />
            </columns>
        </TableView>
    </VBox>
</VBox>